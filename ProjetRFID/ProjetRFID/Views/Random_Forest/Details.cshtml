        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.max_depth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precision)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precision)
        </dd>
    </dl>
</div>

