@model IEnumerable<ProjetRFID.Models.Simulation>

@{
    ViewData["Title"] = "Historique des simulations";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #28324E; /* Fond bleu sombre */
        color: #FFFFFF; /* Couleur du texte blanc */
        padding: 20px; /* Espacement autour du contenu */
    }

    .welcome-title {
        font-size: 2.5em; /* Taille du titre */
        text-align: center; /* Centrage horizontal */
        margin-bottom: 30px; /* Espacement en dessous */
        text-transform: uppercase; /* Conversion en majuscules */
        letter-spacing: 2px; /* Espacement entre les lettres */
    }

    .Menu {
        list-style-type: none; /* Supprime les puces de la liste */
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: space-around; /* Centrage horizontal des éléments */
    }

        .Menu li {
            position: relative; /* Position relative pour positionner le sous-menu */
            width: calc(25% - 20px); /* Largeur des cartes */
            background-color: #FFFFFF; /* Fond transparent */
            border-radius: 20px; /* Coins arrondis */
            padding: 20px; /* Espacement à l'intérieur des cartes */
            margin: 0 10px; /* Espacement entre les cartes */
            text-align: center;
            transition: background-color 0.3s ease; /* Transition fluide */
        }

            .Menu li:hover {
                background-color: #FFFFFF; /* Fond transparent légèrement plus clair au survol */
            }

            .Menu li label {
                cursor: pointer; /* Curseur pointer */
            }

    /* Styles pour le formulaire */
    .form-container {
        display: none; /* Par défaut, le formulaire est caché */
        background-color: #FFFFFF;
        padding: 20px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .inline-link {
        display: inline-block;
        margin-right: 15px;
    }
         tr {
        color: white; /* Couleur du texte blanc */
    }
</style>

<h1>Historique des simulations</h1>
<form method="get" asp-action="Index4">
    <div class="form-group">
        <label for="filterName">Nom de l'utilisateur</label>
        <input type="text" name="filterName" id="filterName" class="form-control" value="@ViewData["CurrentFilterName"]" />
    </div>
    <div class="form-group">
        <label for="filterDate">Date de simulation</label>
        <input type="date" name="filterDate" id="filterDate" class="form-control" value="@ViewData["CurrentFilterDate"]" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrer</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Analytique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SVM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KNN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Random_Forest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
                
            <td>
                    <a asp-action="Details" asp-route-id="@item.id">Détails</a>
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.id">Détails</a>
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.id">Détails</a>
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.id">Détails</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
           
        </tr>
}
       


    </tbody>
</table>
