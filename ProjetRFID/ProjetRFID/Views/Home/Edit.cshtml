@{
}
@model EditUserRoleViewModel

@{
    ViewData["Title"] = "Modification du rôle";
}

<h1>Modification du rôle</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CurrentRole" class="control-label"></label>
        <input asp-for="CurrentRole" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NewRole" class="control-label"></label>
        <select asp-for="NewRole" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="UserManagement">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}